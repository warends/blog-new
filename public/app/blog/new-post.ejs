<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <form name="newPostForm" ng-submit="createNewPost()">
        <div ng-include="'partials/blog/post-form'"></div>
        <div class="form-group">
          <input type="submit" class="btn btn-primary" ng-disabled="newPostForm.$invalid" value="Submit"/>
          <a href="/"><button class="btn btn-danger" ng-click="cancel()">Cancel</button></a>
        </div>
      </form>
    </div>
  </div>
</div>
