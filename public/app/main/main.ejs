<div id="home" class="text-center">
      <div class="container">
          <a href="#contact" class="btn btn-default btn-lg">Get A Free Quote</a>
      </div>
</div><!--end home-->

<!--ABOUT-->
<div id="about" class="padded-vert-2x services">
  <div class="container">
    <div class="row text-center">
      <div class="services-web col-sm-4" ng-repeat="service in services">
        <div class="svg {{service.svg}}"></div>
          <h4>{{service.name}}</h4>
          <p>{{service.description}}</p>
          <a class="more design" ng-click="showDetails = !showDetails">More</a>
          <div class="more-details" ng-class="{'hidden-stuff': !showDetails }">
            <p>{{service.more}}</p>
          </div>
      </div>
    </div>
  </div>
</div>
<!--end about-->


<!--WORK-->
<div class="latest-work padded-vertical" id="projects" ng-controller="workCtrl">
    <div class="heading container">
        <div class="row">
          <div class="col-md-6">
              <h1>Projects</h1>
          </div>
        </div>
    </div> <!-- end heading -->

    <div class="gallery clearfix">
        <div class="gallery-inner col-sm-3 col-xs-12" ng-repeat="project in projects">
          <div class="row">
              <img ng-src="{{project.backgroundImg}}" class="img-responsive">
              <div class="caption">
                <div class="caption-heading">
                  <h4>{{project.name}}</h4>
                </div>
                <div class="btn-trigger btn-group">
                    <a ng-click="project.clickFunc()" class="btn svg web-link">Link</a>
                    <a ng-hide="project.noLink" href="{{project.link}}" target="_blank" class="btn svg more-info"></a>
                </div>
              </div><!-- end caption -->
              <global-modal show="project.modal">
                <img class="img-responsive" ng-src="{{project.modalImg}}" />
              </global-modal>
          </div>
        </div><!--end gallery-Inner-->
    </div><!-- end gallery -->
</div><!--end Work-->

<!-- SERVICES -->
<div class="creative-process padded-vertical" id="services">

    <div class="heading container">
          <div class="row">
            <div class="col-md-6">
                <h1>Services</h1>
            </div>
          </div>
    </div><!-- end heading   -->

    <div class="container">
      <div class="row" ng-controller="carouselCtrl">
        <div id="carousel-creative" class="carousel slide">

              <ol class="carousel-indicators">
                <li ng-repeat="slide in slides" ng-class="{'active':isCurrentSlideIndex($index)}" ng-click="setCurrentSlideIndex($index);">{{slide.name}}</li>
              </ol>

              <!-- Wrapper for slides -->
              <div class="carousel-inner slide-animation" ng-hide="!isCurrentSlideIndex($index)" ng-repeat="slide in slides">
                <div class="item active text-center">
                    <div class="row">
                      <div class="col-sm-6 carousel-pic">
                        <div class="{{slide.svg}}"></div>
                      </div>
                      <div class="col-sm-6">
                        <h4>{{slide.name}}</h4>
                        <p>{{slide.desc}}</p>
                      </div>
                    </div>
                </div><!--end item-->


        </div><!-- end carousel -->
      </div>
    </div>
  </div>
</div><!--end services-->


<!--BLOG LATEST-->
<div id="blog-latest">
  <div class="heading container">
        <div class="row">
            <div class="col-md-6">
              <h1>Latest Posts</h1>
            </div>
        </div>
  </div>
  <div class="container">
    <div class="col-xs-12 row" ng-repeat="post in posts">
      <h3><a href ="/posts/{{post.slug}}">{{post.title}}</a></h3>
      <h6>{{post.postedDate | date}}</h6>
      <p>{{post.excerpt}}</p>
    </div>

    <div class="row col-xs-12">
      <h5><a href="/blog">View All Posts</a></h5>
    </div>
  </div>
</div><!--end blog latest-->


