<% layout('layout') -%>

<header>
    <nav class="navbar sticky navbar-default navbar-fixed-top" role="navigation" ng-controller="NavCtrl">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" ng-click="showMenu()">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand sticky" href="/" ng-click="scrollTop()"></a>
          </div>

      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li du-scrollspy="home"><a href="/" ng-click="scrollTop()">Home</a></li>
          <li><a href="#about" ng-click="linkTo('about')" du-smooth-scroll offset="60" du-scrollspy="about">About</a></li>
          <li><a href="#projects" ng-click="linkTo('projects')" du-smooth-scroll offset="60" du-scrollspy="projects">Projects</a></li>
          <li><a href="#services" ng-click="linkTo('services')" du-smooth-scroll offset="60" du-scrollspy="services">Services</a></li>
          <li><a ui-sref="posts">Blog</a></li>
          <li><a href="#contact" ng-click="linkTo('contact')" du-smooth-scroll offset="60" du-scrollspy="contact">Contact</a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<section id="content" ng-cloak>
  <div ui-view></div>
</section>


<footer ng-controller="LoginController" ng-cloak>
  <div class="container">
    <div class="row">
          <div class="col-xs-12">
            <div class="copywrite">
            <p>&copy; 2016 Will Arends Design. All Rights Reserved | <a ng-click="toggleAccount()">Account</a> | <a ng-click="toggleSignup()">Signup</a> </p>
            </div>
          </div>
    </div>
  </div>

  <global-modal show='actShown' height="225px">
    <h3 class="text-center">Sign In</h3>
    <form id="sign-in" ng-hide="identity.isAuthenticated()">
      <div class="form-group">
        <input class="form-control" placeholder="Username" ng-model="username" />
      </div>

      <div class="form-group">
        <input class="form-control" placeholder="Password" ng-model="password" type="password" />
      </div>
      <button class="btn btn-primary pull-right" ng-click="signIn(username, password)">Sign In</button>
    </form>
  </global-modal>

  <global-modal show='signupShown'>
    <h3 class="text-center">Sign Up</h3>
    <form id="signup" name="signupForm">
      <div class="form-group">
        <label for="firstName">First Name:</label>
        <input type="text" name="firstName" ng-model="firstName" class="form-control" required/>
      </div>
      <div class="form-group">
        <label for="lastName">Last Name:</label>
        <input type="text" name="lastName" ng-model="lastName" class="form-control" required/>
      </div>
      <div class="form-group">
        <label for="username">Username/Email:</label>
        <input type="text" name="username" ng-model="username" class="form-control" required/>
      </div>
      <div class="form-group">
        <label for="name">Password:</label>
        <input type="password" name="password" ng-model="password" class="form-control" required/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" ng-click="signup(firstName, lastName, username, password)" ng-disabled="signupForm.$invalid">Signup</button>
        <a href="/"><button class="btn btn-danger" ng-click="cancel()">Cancel</button></a>
      </div>
    </form>
  </global-modal>
</footer>
