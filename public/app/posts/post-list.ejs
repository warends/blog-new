<div class="container">
  <div class="row col-xs-12">
    <h2 class="title">New Posts</h2>
  </div>
  <div class="row">

    <div class="col-sm-8 padded-bottom-2x">

      <div ng-if="sortOrder === 'published'">
        <div class="post-list" ng-repeat="post in posts | filter:searchText | orderBy:sortOrder:true">
          <h3><a href ="/posts/{{post.slug}}">{{post.title}}</a></h3>
          <!-- <h5 class="categories" ng-repeat="cat in post.categories">{{cat}},</h5> -->
          <h6>{{post.postedDate | date}}</h6>
          <p>{{post.excerpt}}</p>
          <p ng-show="identity.currentUser.isAdmin()"><a href="/admin/{{post.slug}}/edit">Edit</a></p>
        </div>
      </div>
      <div ng-if="sortOrder === 'title'">
        <div class="post-list" ng-repeat="post in posts | filter:searchText | orderBy:sortOrder">
          <h3><a href ="/posts/{{post.slug}}">{{post.title}}</a></h3>
          <!-- <h5 class="categories" ng-repeat="cat in post.categories">{{cat}},</h5> -->
          <h6>{{post.postedDate | date}}</h6>
          <p>{{post.excerpt}}</p>
          <p ng-show="identity.currentUser.isAdmin()"><a href="/admin/{{post.slug}}/edit">Edit</a></p>
        </div>
      </div>

    </div>

    <div class="col-sm-4 search">
      <h2>Search</h2>
      <form>
        <div class="form-group">
          <input type="text" class="form-control" ng-model="searchText" placeholder="Search" />
          <select class="form-control" ng-model="sortOrder" ng-Options="item.value as item.text for item in sortOptions">
          </select>
        </div>
      </form>
    </div>
  </div>
</div>
