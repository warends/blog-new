
<div id="blog-latest">

  <div class="heading">
    <div class="container">
        <div class="row">
            <div class="col-md-6 text-center">
              <h1>Latest Posts</h1>
            </div>
        </div>
    </div>
  </div>

  <div class="container">
    <div class="col-xs-12 row" ng-repeat="post in posts">
      <h3><a href ="/posts/{{post._id}}">{{post.title}}</a></h3>
      <h6>{{post.postedDate | date}}</h6>
      <p>{{post.excerpt}}</p>
    </div>

    <div class="row col-xs-12">
      <h3><a href="/blog">View All Posts</a></h3>
    </div>

    <!-- twitter -->
    <div class="row col-xs-12">
      <div style="margin: 25px 0; border: 1px solid #000; padding: 5px;" ng-repeat="tweet in tweets">
        {{tweet.text}}
      </div>

      <div ng-if="twitterErrors" class="alert alert-danger">
        {{twitterErrors}}
      </div>

    </div>

  </div>


</div>
