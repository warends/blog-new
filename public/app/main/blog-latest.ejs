
<div id="blog-latest">

  <div class="heading">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
              <h1>Latest Posts</h1>
            </div>
        </div>
    </div>
  </div>

  <div class="container">
    <div class="col-xs-12 row" ng-repeat="post in posts">
      <h3><a href ="/posts/{{post.slug}}">{{post.title}}</a></h3>
      <h6>{{post.postedDate | date}}</h6>
      <p>{{post.excerpt}}</p>
    </div>

    <div class="row col-xs-12">
      <h5><a ui-sref="posts">View All Posts</a></h5>
    </div>

