<div class="container">
  <div class="row">
    <!--MAIN CONTENT-->
    <div class="col-sm-8 post">

      <div class="post-detials">
        <h1 class="padded-bottom">{{post.title}}</h1>
        <h5>{{post.postedDate | date}}</h5>
        <!-- <h5 class="categories" ng-repeat="cat in post.categories">{{cat}},</h5> -->
      </div>

      <div class="post-content" ng-bind-html="post.body"></div>
      <p class="lead author padded-vertical">- {{post.author}}</p>

      <div class="comment-box">
        <h4>Leave a Comment</h4>
        <form name="commentForm" ng-submit="submitComment()">
          <div class="row">
            <div class="form-group col-sm-6">
              <label for="firstName">First Name</label>
              <input type="text" name="firstName" ng-model="comment.firstName" class="form-control"/>
            </div>
            <div class="form-group col-sm-6">
              <label for="lastName">Last Name</label>
              <input type="text" name="firstName" ng-model="comment.lastName" class="form-control"/>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-12">
              <label for="content">Comment</label>
              <textarea type="text" name="content" ng-model="comment.content" rows="3" class="form-control" required></textarea>
            </div>
            <div class="form-group col-xs-12">
              <input type="submit" class="btn btn-primary" ng-disabled="commentForm.$invalid" value="Submit" />
            </div>
          </div>
        </form>
      </div>


      <br />
      <br />
      <h4>Comments</h4>
      <div class="comment-box" ng-repeat="comment in post.comments">
          <p>{{comment.content}}</p>
          <small>Posted Date: {{comment.date | date}}</small>
          <p>{{comment.firstName}}</p>
      </div>

    </div>

    <!--SIDEBAR-->
    <div class="col-sm-4">
      <div class="share">
        <h3>Share</h3>
        <a target="_blank" href="https://twitter.com/home?status={{post.title}}%20%0Ahttp%3A//www.willarendsdev.com/posts/{{post.slug}}"><span class="icon-sprite sprite-tw">&nbsp;</span></a>
        <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=willarendsdev.com/posts/{{post.slug}}"><span class="icon-sprite sprite-fb">&nbsp;</span></a>
      </div>
    </div>
  </div>
</div>
